package loop:kit@0.1.0;

interface window {
    type window-id = u32;

    record window-config {
        title: string;
        width: u32;
        height: u32;
    }

    create: func(config: window-config) -> window-id;
    show: func(id: window-id);
    close: func(id: window-id);
    resize: func(id: window-id, width: u32, height: u32);
}