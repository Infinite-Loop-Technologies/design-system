package loop:kit@0.1.0;

/// Simple world for loop-kit apps - just a window for now
world app {
    // Import wasi-gfx surface capabilities
    include wasi:surface/imports@0.0.1;
    include wasi:graphics-context/imports@0.0.1;
    include wasi:frame-buffer/imports@0.0.1;

    /// Main entrypoint
    export start: func();

    /// Simple logging (we can remove this later if wasi:logging gets imported)
    import log: func(message: string);
}