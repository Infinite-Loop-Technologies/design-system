// wit/world.wit
package loop:kit@0.0.1;

/// The world that loop-kit applications implement
world app {
    include wasi:surface/imports@0.0.1;
    include wasi:graphics-context/imports@0.0.1;
    include wasi:frame-buffer/imports@0.0.1;


    /// Main entrypoint - called once to start the app
    export start: func();

    /// Print to host stdout (for debugging)
    import print: func(s: string);
}