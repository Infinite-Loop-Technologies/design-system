package loop:kit@0.1.0;

/// The main world that loop-kit applications implement
world app {
    // Import host capabilities
    import window;
    import canvas;
    import logging;

    // Re-export types for convenience
    use types.{event, event-result};

    /// Called once when the application starts
    /// Return the desired window configuration
    export init: func();

    /// Called every frame with delta time in microseconds
    export update: func(delta-us: u64);

    /// Called when an event occurs
    /// Return event-result to indicate how it was handled
    export on-event: func(event: event) -> event-result;

    /// Called when a frame should be rendered
    export render: func();
}