package loop:kit@0.1.0;

/// Simple 2D canvas for immediate-mode drawing
interface canvas {
    use types.{color, rect};

    /// Begin a new frame (clears with background color)
    begin-frame: func(clear-color: color);

    /// Fill a rectangle with a solid color
    fill-rect: func(rect: rect, color: color);

    /// Draw a rectangle outline
    stroke-rect: func(rect: rect, color: color, line-width: f32);

    /// Fill a circle
    fill-circle: func(cx: f32, cy: f32, radius: f32, color: color);

    /// Draw a line
    draw-line: func(x1: f32, y1: f32, x2: f32, y2: f32, color: color, width: f32);

    /// Set a pixel directly (for custom rendering)
    set-pixel: func(x: u32, y: u32, color: color);

    /// Get canvas dimensions
    dimensions: func() -> tuple<u32, u32>;

    /// End frame and present to screen
    end-frame: func();
}