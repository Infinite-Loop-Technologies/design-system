{
    "name": "@loop-kit/loop-kernel",
    "version": "0.1.0",
    "description": "Loop kernel runtime and patch engine.",
    "type": "module",
    "sideEffects": false,
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "default": "./dist/index.js"
        },
        "./package.json": "./package.json"
    },
    "files": ["dist", "README.md", "ARCHITECTURE.md", "templates"],
    "scripts": {
        "build": "pnpm --filter @loop-kit/loop-contracts build && tsc -p tsconfig.build.json",
        "typecheck": "pnpm --filter @loop-kit/loop-contracts build && tsc -p tsconfig.json --noEmit",
        "test": "node --import tsx --test ./test/**/*.test.ts",
        "clean": "node -e \"require('node:fs').rmSync('dist', { recursive: true, force: true })\"",
        "prepack": "pnpm run clean && pnpm run build"
    },
    "dependencies": {
        "@babel/parser": "^7.28.5",
        "@babel/types": "^7.28.5",
        "@loop-kit/loop-contracts": "workspace:*",
        "diff": "^8.0.2",
        "execa": "^9.6.0",
        "fast-glob": "^3.3.3",
        "fs-extra": "^11.3.2",
        "json-merge-patch": "^1.0.2",
        "recast": "^0.23.11",
        "semver": "^7.7.3",
        "zod": "^4.1.11"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/node": "^22.17.0",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    },
    "license": "MIT"
}
