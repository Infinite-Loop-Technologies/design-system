{
    "name": "loop-kit-bun",
    "module": "src/index.tsx",
    "type": "module",
    "private": true,
    "bin": {
        "loop": "src/cli/loop.tsx"
    },
    "scripts": {
        "dev:loop": "bun run ./src/cli/loop.tsx",
        "build": "bun build ./src/cli/loop.tsx --compile --outfile=./dist/loop.exe",
        "build:watch": "bun --watch build ./src/cli/loop.tsx --compile --outfile=./dist/loop.exe",
        "test": "bun test"
    },
    "devDependencies": {
        "@types/bun": "latest"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "dependencies": {
        "@opentui-ui/toast": "^0.0.3",
        "@opentui/core": "^0.1.63",
        "@opentui/react": "^0.1.63",
        "react": "^19.2.3"
    }
}
