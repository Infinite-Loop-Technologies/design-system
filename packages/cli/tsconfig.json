{
    "extends": "@tsconfig/strictest/tsconfig.json",
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2023",
        "lib": ["ES2023"],
        "jsx": "react-jsx",
        "noEmit": true,
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "preserveSymlinks": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": ["src"]
}
